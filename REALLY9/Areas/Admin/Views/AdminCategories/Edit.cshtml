@model REALLY9.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <input type="hidden" asp-for="Thumb" />
            <div class="form-floating mb-3">
                <input asp-for="CatName" class="form-control" placeholder="CatName" />
                <label asp-for="CatName" class="control-label"></label>
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ParentId" class="form-control" placeholder="ParentId" />
                <label asp-for="ParentId" class="control-label"></label>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Levels" class="form-control" placeholder="Levels" />
                <label asp-for="Levels" class="control-label"></label>
                <span asp-validation-for="Levels" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Ordering" class="form-control" placeholder="Ordering" />
                <label asp-for="Ordering" class="control-label"></label>
                <span asp-validation-for="Ordering" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)
                </label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Thumb" class="form-control" placeholder="Thumb" />
                <label asp-for="Thumb" class="control-label"></label>
                <span asp-validation-for="Thumb" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" placeholder="Title" />
                <label asp-for="Title" class="control-label"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Alias" class="form-control" placeholder="Alias" />
                <label asp-for="Alias" class="control-label"></label>
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

