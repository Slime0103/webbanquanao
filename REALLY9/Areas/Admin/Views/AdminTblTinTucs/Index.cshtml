@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<REALLY9.Models.TblTinTuc>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="table-respontive">
    <div class="bg-light rounded h-100 p-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Post ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">IsHot</th>
                    <th scope="col">IsNewFeed</th>
                    <th scope="col">Status</th>
                    <th scope="col">Account ID</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.PostId</th>
                            <td>@item.Title</td>

                            <td>
                                @if (item.IsHot == true)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>Hot</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>-</div>
                                    </div>
                                }
                            </td>

                            <td>
                                @if (item.IsNewfeed == true)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>New</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>Old</div>
                                    </div>
                                }
                            </td>

                            <td>
                                @if (item.Published == true)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>Public</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-b-10"></div>
                                        <div>Private</div>
                                    </div>
                                }
                            </td>

                            <td>@item.AccountId</td>


                            <td>
                                <a class="btn btn-outline-primary m-2" asp-area="Admin" asp-controller="AdminTblTinTucs" asp-action="Details" asp-route-id="@item.PostId">Chi Tiet</a>
                                <a class="btn btn-outline-success m-2" asp-area="Admin" asp-controller="AdminTblTinTucs" asp-action="Edit" asp-route-id="@item.PostId">Sua</a>
                                <a class="btn btn-outline-danger m-2" asp-area="Admin" asp-controller="AdminTblTinTucs" asp-action="Delete" asp-route-id="@item.PostId">Xoa</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminTblTinTucs" asp-action="Index" />
            </ul>
        </div>
    </div>
</div>
