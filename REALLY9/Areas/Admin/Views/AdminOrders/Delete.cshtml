@model REALLY9.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa đơn hàng</h1>


<div>
    <h4>Đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ngày đặt hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orderdate)
        </dd>
        <dt class="col-sm-2">
            Ngày ship
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipDate)
        </dd>
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalMoney)
        </dd>
        <dt class="col-sm-2">
            Đã xóa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deleted)
        </dd>
        <dt class="col-sm-2">
            Đã trả tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            Ngày trả tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentDay)
        </dd>
        <dt class="col-sm-2">
            Ghi chú
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
