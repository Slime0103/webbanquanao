@model REALLY9.ModelViews.AdminLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-xxl position-relative bg-white d-flex p-0">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="/" class="">
                            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>REALLY9</h3>
                        </a>
                        <h3>Sign In</h3>
                    </div>

                    <form asp-action="AdminLogin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">

                            <div class="form-floating mb-3">

                                <input type="text" asp-for="UserName" class="form-control" placeholder="UserName" />
                                <label asp-for="UserName" class="control-label">UserName</label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-4">

                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                <label asp-for="Password" class="control-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="RoleName" asp-items="ViewBag.Roles" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary py-3 w-100 mb-4">Sign In</button>
                        </div>
                        <p class="text-center mb-0">Don't' have an Account? <a href="/admin-dang-ky.html">Sign Up</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

