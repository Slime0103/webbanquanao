@model PagedList.IPagedList<REALLY9.Models.Account>
@using PagedList.Mvc;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Trang chủ sản phẩm </h1>

<p>
    <a asp-action="Create">Thêm mới sản phẩm</a>
</p>



<div class="table-respontive">
    <div class="bg-light rounded h-100 p-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Accout ID</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">SĐT</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mật khẩu</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">RoleName</th>


                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.AccountId</th>
                            <td>@item.Fullname</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Password</td>
                            <td>@item.Active</td>
                            <td>@item.RoleId</td>

                            <td>
                                <a class="btn btn-outline-primary m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId">Chi Tiet</a>
                                <a class="btn btn-outline-success m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId">Sua</a>
                                <a class="btn btn-outline-danger m-2" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId">Xoa</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container"  asp-area="Admin" asp-controller="AdminProducts" asp-route-CatID="@ViewBag.CurrentCateID" asp-action="Index" />
            </ul>
        </div>
    </div>
</div>




