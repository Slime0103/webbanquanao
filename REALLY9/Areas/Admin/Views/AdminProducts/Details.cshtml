@model REALLY9.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="page-header">
    <div class="hear-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Product List</a>
            <span class="breadcrumb-item active">Product Information</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-center-item-center m-b-15">
            <div class="avatar avatar-image rounded">
                <img src="~/images/products/@Model.Thumb" style="height:80px; width:80px" alt="@Model.Title" />
            </div>
            <div class="m-l-15">
                <h4 class="m-t-0">@Model.ProductName</h4>
                <p class="text-muted m-b-0">ID:#@Model.ProductId</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Infor</h4>
        <div class="table-respontive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Product name:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Catergories ID:</td>
                        <td>@Model.CatId</td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Discount:</td>
                        <td>@Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Thumb:</td>
                        <td>
                            <img width="200px" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Date Created:</td>
                        <td>@Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>Date Modifield:</td>
                        <td>@Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Best Seller:</td>
                        <td>@Model.BestSellers</td>
                    </tr>
                    <tr>
                        <td>Home Flag:</td>
                        <td>@Model.HomeFlag</td>
                    </tr>
                    <tr>
                        <td>Active:</td>
                        <td>@Model.Active</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>UnitStock:</td>
                        <td>@Model.UnitslnStock</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
