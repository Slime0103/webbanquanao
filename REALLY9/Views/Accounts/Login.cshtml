@model REALLY9.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SignInSignUpLayout.cshtml";
}



<div class="container-xxl position-relative bg-white d-flex p-0">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="/" class="">
                            <h2 class="text-primary"><i class="fa fa-hashtag me-2"></i>REALLY9</h2>
                        </a>
                        <h2>Đăng nhập</h2>
                    </div>
                    
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">

                        <div class="form-floating mb-3">

                            <input type="text" asp-for="UserName" class="form-control" placeholder="UserName" />
                            <label asp-for="UserName" class="control-label">UserName</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">

                            <input type="password   " asp-for="Password" class="form-control" placeholder="Password" />
                            <label asp-for="Password" class="control-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary py-3 w-100 mb-4">Đăng nhập</button>
                        </div>
                        <p class="text-center mb-0">Không có tài khoản? <a href="/dang-ky.html">Đăng kí</a></p>
                        <p class="text-center mb-0">Quên mật khẩu? <a href="/quen-mat-khau.html">Lấy lại</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

